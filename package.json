{
  "name": "javascript-action",
  "description": "A GitHub Action to send a workflow status message to Slack",
  "version": "0.1.0",
  "author": "jcouball@yahoo.com",
  "private": false,
  "homepage": "https://github.com/main-branch/slack-notification#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/main-branch/slack-notification.git"
  },
  "bugs": {
    "url": "https://github.com/main-branch/slack-notification/issues"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript",
    "Slack"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "ci-test": "jest",
    "format": "trunk fmt --all --print-failures --show-existing",
    "lint": "trunk check --all --no-fix --print-failures --show-existing",
    "lint:fix": "trunk check --all --fix --print-failures --show-existing",
    "lint:ci": "trunk check --all --no-fix --ci --show-existing && trunk check list | grep \"✔\\|◯\"",
    "package": "ncc build src/index.js --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "jest && make-coverage-badge --output-path ./badges/coverage.svg",
    "all": "npm run format && npm run lint:ci && npm run test && npm run package"
  },
  "license": "MIT",
  "eslintConfig": {
    "extends": ".trunk/configs/.eslintrc.yml"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^5.0.0",
    "@slack/web-api": "^6.10.0",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/eslint-parser": "^7.23.3",
    "@babel/preset-env": "^7.23.6",
    "@trunkio/launcher": "^1.2.7",
    "@vercel/ncc": "^0.38.1",
    "babel-preset-jest": "^29.6.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.1.0",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.1.1"
  }
}
